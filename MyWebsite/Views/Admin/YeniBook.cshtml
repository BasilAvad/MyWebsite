@model MyWebsite.Models.Sınıflar.Book
@{
    ViewBag.Title = "YeniBook";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>New Book Add</h2>
<br />
<form class="form-group"  method="post">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BookImage)
    @Html.TextBoxFor(x => x.BookImage, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button  class="btn btn-primary">Save Book</button>
</form>

